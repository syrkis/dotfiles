// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "formatter": [
    {
      "external": {
        "command": "ruff",
        "arguments": [
          "format",
          "-"
        ]
      }
    },
    {
      "language_server": {
        "enabled": true
      }
    }
  ],
  "assistant": {
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    }
  },
  "extend_comment_on_newline": false,
  "languages": {
    "Python": {
      "language_servers": [
        "pyright",
        "ruff"
      ],
      "format_on_save": "on"
    }
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "chat_panel": {
    "button": false,
    "dock": "right"
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "dock": "right",
    "copy_on_select": true,
    "default_width": 600,
    "line_height": {
      "custom": 2.5
    }
  },
  "task": {
    "show_status_indicator": true
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": false
  },
  "dock": "right",
  "jupyter": {
    "enabled": true,
    "dock": "right",
    "kernel_selections": {
      "python": "miiii"
    }
  },
  "ui_font_size": 16,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 2.5
  },
  "vim": {
    "use_multiline_find": true
  },
  "use_autoclose": true,
  "vim_mode": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Evil Rabbit (Dark)"
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
