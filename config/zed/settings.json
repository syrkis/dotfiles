// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "preferred_line_length": 120,
  "extend_comment_on_newline": true,
  "languages": {
    "Markdown-Inline": {
      "show_inline_completions": false
    },
    "Svelte": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "JavaScript": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "TypeScript": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "Typst": {
      "language_servers": ["tinymist"],
      "format_on_save": "on",
      "use_autoclose": false,
      "formatter": {
        "external": {
          "command": "typstyle",
          "arguments": []
        }
      }
    },
    "Python": {
      "language_servers": ["pyright"], // , "ruff"],
      "format_on_save": "on",
      "preferred_line_length": 120,
      "use_autoclose": false,
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "-"]
        }
      }
    }
  },
  "centered_layout": {
    "enabled": true,
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "button": true,
    "dock": "right"
  },
  "chat_panel": {
    "button": false,
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "dock": "right",
    "detect_venv": {
      "on": {
        "activate_script": "fish"
      }
    },
    "shell": {
      "program": "fish"
    },
    "copy_on_select": true,
    "default_width": 600,
    "line_height": {
      "custom": 2.5
    }
  },
  "task": {
    "show_status_indicator": true
  },
  "relative_line_numbers": true,
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "auto_install_extensions": {
    "enabled": true
  },
  "restore_on_startup": "none",
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "tab_bar": {
    "show": false
  },
  "dock": "right",
  "jupyter": {
    "enabled": true,
    "dock": "right",
    "kernel_selections": {
      "python": "miiii"
    }
  },
  "ui_font_size": 16,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 2.5
  },
  "vim": {
    "use_multiline_find": true
  },
  "use_autoclose": true,
  "vim_mode": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Evil Rabbit (Dark)"
  },
  "journal": {
    "path": "~/desk/text",
    "hour_format": "hour24"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
