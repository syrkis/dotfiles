// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "extend_comment_on_newline": false,
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "nightly": {
    "enabled": false,
    "auto_update": true
  },
  "terminal": {
    "dock": "right",
    "copy_on_select": true,
    "default_width": 500,
    "line_height": {
      "custom": 2.5
    }
  },
  "task": {
    "show_status_indicator": true
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": false
  },
  "jupyter": {
    "enabled": true,
    "dock": "right",
    "default_width": 300
  },
  "auto_update": true,
  "ui_font_size": 16,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "current_line_highlight": "none",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 16,
  "buffer_line_height": {
    "custom": 2.5
  },
  "vim_mode": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "autosave": "on_focus_change",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Evil Rabbit (Dark)"
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
