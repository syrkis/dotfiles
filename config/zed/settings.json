// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.

{
  // ========================================
  // APPEARANCE & THEME
  // ========================================
  "theme": {
    "mode": "system",
    "light": "Monosami Light",
    "dark": "Monosami Dark"
  },
  "ui_font_family": "FiraCode Nerd Font Mono",
  "ui_font_size": 16,
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 16.0,
  "buffer_line_height": {
    "custom": 2.5
  },

  // ========================================
  // EDITOR BEHAVIOR
  // ========================================
  "vim_mode": true,
  "use_autoclose": true,
  "always_treat_brackets_as_autoclosed": false,
  "auto_signature_help": true,
  "current_line_highlight": "none",
  "relative_line_numbers": true,
  "extend_comment_on_newline": true,
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "restore_on_startup": "last_workspace",

  // ========================================
  // EDITOR VISUAL ELEMENTS
  // ========================================
  "minimap": {
    "show": "auto",
    "thumb": "hover",
    "current_line_highlight": "all"
  },
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true
  },
  "tab_bar": {
    "show": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    // "show": false,
    "breadcrumbs": false,
    "quick_actions": true
  },

  // ========================================
  // LAYOUT & PANELS
  // ========================================
  "centered_layout": {
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "project_panel": {
    "button": false,
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "chat_panel": {
    "button": "never",
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right",
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "search": {
    "button": false
  },
  "debugger": {
    "dock": "right"
  },

  // ========================================
  // TERMINAL CONFIGURATION
  // ========================================
  "terminal": {
    "dock": "right",
    "button": false,
    "font_family": "FiraCode Nerd Font Mono",
    "font_features": {
      "liga": true,
      "calt": true
    },
    "line_height": {
      "custom": 2.5
    },
    "detect_venv": {
      "on": {
        "activate_script": "fish"
      }
    }
  },

  // ========================================
  // GIT INTEGRATION
  // ========================================
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },

  // ========================================
  // AI AGENT CONFIGURATION
  // ========================================
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-1-thinking"
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },

  // ========================================
  // LANGUAGE SERVERS & FORMATTING
  // ========================================
  "lsp": {
    "harper": {
      "enable_lsp_tasks": true
    },

    "ty": {
      // "binary": {
      // "path": "/etc/profiles/per-user/nobr/bin/ty",
      // "arguments": ["server"]
      // },
      // "initialization_options": {
      // "settings": {
      // "logLevel": "debug"
      // }
      // }
    },
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "tinymist": {
      "settings": {
        "exportPdf": "onSave"
      }
    }
  },

  // ========================================
  // LANGUAGE-SPECIFIC SETTINGS
  // ========================================
  "languages": {
    "Python": {
      "language_servers": ["ruff", "ty"],
      "extend_comment_on_newline": false
    },
    "Julia": {
      "show_edit_predictions": true,
      "format_on_save": "on",
      "use_autoclose": false
    },
    "Typst": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "typstyle",
          "arguments": ["-c", "80", "--wrap-text"]
        }
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "use_autoclose": true,
      "tab_size": 4
    },
    "JavaScript": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "Svelte": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "Markdown": {
      "show_edit_predictions": true,
      "format_on_save": "on"
    },
    "Markdown-Inline": {
      "show_edit_predictions": false,
      "format_on_save": "on",
      "preferred_line_length": 80
    },
    "Uiua": {
      "show_edit_predictions": false
    }
  },

  // ========================================
  // EXTENSIONS & AUTO-INSTALL
  // ========================================
  "auto_update_extensions": {
    "enabled": true
  },
  "auto_install_extensions": {
    "enabled": true,
    "ruff": true,
    "hurl": true,
    "dockerfile": true,
    "python-snippets": true,
    "wakatime": true,
    "harper": true,
    "ty": true,
    "toml": true,
    "svelte": true,
    "nix": true,
    "typst": true,
    "julia": true,
    "uiua": true,
    "astro": true,
    "lean4": true
  },

  // ========================================
  // JUPYTER INTEGRATION
  // ========================================
  "jupyter": {
    "kernel_selections": {
      "python": ".venv"
    }
  },

  // ========================================
  // SSH CONNECTIONS
  // ========================================
  "ssh_connections": [
    {
      "host": "130.226.143.130",
      "username": "nobr",
      "projects": [
        {
          "paths": ["~/pensim"]
        }
      ]
    },
    {
      "host": "tripper4.itu.dk",
      "username": "noah",
      "projects": [
        {
          "paths": ["~/nebellum"]
        },
        {
          "paths": ["~/parabellum"]
        }
      ]
    },
    {
      "host": "tripper4.itu.dk",
      "username": "noah",
      "projects": []
    },
    {
      "host": "hpc.itu.dk",
      "username": "nobr",
      "projects": [
        {
          "paths": ["/home/nobr/nebellum"]
        }
      ]
    }
  ],

  // ========================================
  // COLLABORATION & COMMUNICATION
  // ========================================
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },

  // ========================================
  // JOURNAL CONFIGURATION
  // ========================================
  "journal": {
    "path": "~/desk/text",
    "hour_format": "hour24"
  },

  // ========================================
  // MISCELLANEOUS SETTINGS
  // ========================================
  "task": {
    "show_status_indicator": false
  },
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": null
  },
  "experimental.theme_overrides": {
    // "editor.background": "#333",
    "syntax": {
      "comment": {
        "font_style": "italic"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  },
  "profiles": {
    "Focus": {
      "ui_font_size": 16,
      "buffer_font_size": 18,
      "buffer_line_height": { "custom": 2.0 },
      "tab_bar": {
        "show": false,
        "show_tab_bar_buttons": false,
        "show_nav_history_buttons": false
      },
      "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false,
        "code_actions": false
        // "agent_review": false
      },
      "gutter": {
        "line_numbers": false,
        "folds": false,
        "breakpoints": false,
        "runnables": false,
        "min_line_number_digits": 0
      },
      "indent_guides": {
        "enabled": false
      },
      "current_line_highlight": "none",
      "scrollbar": {
        "show": "never",
        "cursors": false,
        "git_diff": false,
        "diagnostics": "none",
        "search_results": false,
        "selected_symbol": false
      }
    }
  }
}
