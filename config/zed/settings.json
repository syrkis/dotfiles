  "ui_font_family": "FiraCode Nerd Font Mono",
  "auto_update_extensions": {
    "enabled": true
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "extend_comment_on_newline": true,
  "lsp": {
    "ty": {
      "binary": {
        "path": "/etc/profiles/per-user/nobr/bin/ty",
        "arguments": ["server"]
      }
    },
    "nil": {
      "initialization_options": {
        "formatting": {
          "command": ["nixfmt"]
        }
      }
    },
    "tinymist": {
      "settings": {}
    }
  },
  "search": { "button": false },
  "languages": {
    "Typst": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "typstyle",
          "arguments": ["-c", "80", "--wrap-text"]
        }
      }
    },
    "Uiua": {
      "show_edit_predictions": false
    },
    "Markdown-Inline": {
      "show_edit_predictions": false,
      "format_on_save": "on",
      "preferred_line_length": 80
    },
    "Svelte": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "JavaScript": {
      "format_on_save": "on",
      "use_autoclose": true
    },
    "Markdown": {
      "show_edit_predictions": false,
      "format_on_save": "on"
    },
    "TypeScript": {
      "format_on_save": "on",
      "use_autoclose": true,
      "tab_size": 4
    },
    "Python": {
      "language_servers": ["ruff", "ty"],
      "extend_comment_on_newline": false
    }
  },
  "Julia": {
    "show_edit_predictions": true,
    // "language_servers": ["julia"],
    "format_on_save": "on",
    "use_autoclose": false
  },

  // "unnecessary_code_fade": 0.8,
  "calls": {
    // Join calls with the microphone live by default
    "mute_on_join": true,
    // Share your project when you are the first to join a channel
    "share_on_join": false
  },
  "centered_layout": {
    "enabled": true,
    "left_padding": 0.1,
    "right_padding": 0.1
  },
  "project_panel": {
    "button": false,
    "dock": "right",
    "git_status": true
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "chat_panel": {
    "button": "never",
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right",
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "terminal": {
    "dock": "right",
    "button": false,
    "detect_venv": {
      "on": {
        "activate_script": "fish",
        "command": "source .venv/bin/activate.fish"
      }
    },
    // "shell": {
    // "program": "fish"
    // },
    "line_height": {
      "custom": 2.5
    },
    // "default_width": 600,
    "font_family": "FiraCode Nerd Font Mono",
    "font_features": {
      "liga": true,
      "calt": true
    }
  },
  "task": {
    "show_status_indicator": false
  },
  "relative_line_numbers": true,
  "expand_excerpt_lines": 5,
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "auto_install_extensions": {
    "enabled": true,
    "ruff": true,
    "ty": true,
    "typst": true
  },
  "restore_on_startup": "none",
  "slash_commands": {
    "docs": {
      "enabled": true
    }
  },
  "tab_bar": {
    "show": false
  },
  "toolbar": {
    "breadcrumbs": true
    // "quick_actions": false
  },
  "dock": "right",
  "git": {
    // "git_gutter": "hide",
    // "gutter_debounce": null,
    "inline_blame": {
      "enabled": true
      // "show_commit_summary": true
    }
  },
  // "indent_guides": {
  // "enabled": true
  // "line_width": 1,
  // "active_line_width": 2,
  // "coloring": "fixed",
  // "background_coloring": "disabled"
  // },
  "jupyter": {
    "enabled": true,
    "dock": "right",
    "kernel_selections": {
      "python": "miiii"
    }
  },
  "ui_font_size": 16,
  "soft_wrap": "editor_width",
  // "preferred_line_length": null,
  "format_on_save": "on",
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "buffer_font_size": 16.0,
  "show_user_picture": false,
  "buffer_line_height": {
    "custom": 2.5
  },
  "current_line_highlight": "all",
  "vim": {
    "use_multiline_find": true
  },
  "use_autoclose": true,
  "vim_mode": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Lila (Dark)"
  },
  "journal": {
    "path": "~/desk/text/journal",
    "hour_format": "hour24"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  }
}
